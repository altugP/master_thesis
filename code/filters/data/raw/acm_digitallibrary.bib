@inproceedings{10.1145/3184558.3191648,
author = {De Brouwer, Mathias and Ongenae, Femke and Daneels, Glenn and Municio, Esteban and Famaey, Jeroen and Latr\'{e}, Steven and De Turck, Filip},
title = {Personalized Real-Time Monitoring of Amateur Cyclists on Low-End Devices: Proof-of-Concept &amp; Performance Evaluation},
year = {2018},
isbn = {9781450356404},
