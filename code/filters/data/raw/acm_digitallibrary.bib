numpages = {18},
keywords = {inside-out tracking, multi-device collaboration, proximity, ultra-wideband sensing},
location = {<conf-loc>, <city>Hamburg</city>, <country>Germany</country>, </conf-loc>},
series = {CHI '23}
}

