@inproceedings{10.1145/3329189.3329245,
author = {Wilson, Emma D. and Helal, Sumi and Bull, Christopher N. and Honary, Mahsa},
title = {Persuasive Health: Back to the Future},
year = {2019},
isbn = {9781450361262},
