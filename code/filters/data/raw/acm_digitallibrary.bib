@article{10.1145/3635472,
author = {Jardine, Jacinta and Nadal, Camille and Robinson, Sarah and Enrique, Angel and Hanratty, Marcus and Doherty, Gavin},
title = {Between Rhetoric and Reality: Real-world Barriers to Uptake and Early Engagement in Digital Mental Health Interventions},
year = {2024},
