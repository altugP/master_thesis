@inproceedings{10.1145/3647444.3647915,
author = {Manhas, Vishal Singh and Sahani, Prince and Upase, Shankar Venkatrao and Ashtagi, Rashmi},
title = {RealTime Drowsiness Detection System using Facial Landmarks and Eye Blink Analysis},
year = {2024},
isbn = {9798400709418},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3647444.3647915},
doi = {10.1145/3647444.3647915},
abstract = {This paper explores the critical issue of driver drowsiness and its significant contribution to road accidents. A real-time drowsiness detection system that harnesses the power of computer vision and facial landmark recognition to enhance safety and prevent accidents in situations where drowsiness poses a significant risk, such as drowsy driving. This system combines various libraries and techniques, including Dlib for face detection and facial landmark identification and OpenCV for image processing. Its core functionality involves capturing video frames from a camera feed, locating faces within each frame, and then focusing on the eyes and eyebrows to assess the individual's level of alertness. This assessment is primarily based on the analysis of eye blinking patterns, with specific attention to the blink ratio, which serves as a key indicator. Depending on the calculated blink ratio, the system classifies the person's state into three distinct categories: "SLEEPING," "Drowsy," or "Active." These categories are conveyed to the user through real-time text overlays on the video feed, each represented by a specific color. The value of this project lies in its potential to prevent accidents caused by drowsiness, a major factor contributing to road accidents worldwide. By continuously monitoring and evaluating the individual's state of alertness, this system provides immediate feedback and intervention when drowsiness is detected, thus contributing to safer driving and potentially extending its applicability to other domains where alertness is critical, such as operating heavy machinery or monitoring individuals in critical work environments. Furthermore, this project offers a foundation for further development and integration with advanced technologies, potentially evolving into a comprehensive safety system with broader applications in areas where real-time alertness assessment is essential for reducing risks and enhancing overall safety.},
booktitle = {Proceedings of the 5th International Conference on Information Management &amp; Machine Intelligence},
articleno = {88},
numpages = {9},
