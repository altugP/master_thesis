@inproceedings{10.1145/2702123.2702397,
author = {Yannier, Nesra and Koedinger, Kenneth R. and Hudson, Scott E.},
title = {Learning from Mixed-Reality Games: Is Shaking a Tablet as Effective as Physical Observation?},
