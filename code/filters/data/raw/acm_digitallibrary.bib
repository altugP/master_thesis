series = {CHI '19}
}

@inproceedings{10.1145/3469266.3471166,
author = {Nkurunziza, Jean Bosco and Busa, Michael and Gummeson, Jeremy and Risinger, Erik},
title = {Psycho-physiological impedance matching through holistic closed-loop cyber-physical systems},
year = {2021},
isbn = {9781450386067},
