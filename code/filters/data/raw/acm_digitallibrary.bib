keywords = {Wearable and mobile data, cognitive behavioural therapy, just-in-time adaptive intervention, machine learning, stress detection},
location = {<conf-loc>, <city>Cancun, Quintana Roo</city>, <country>Mexico</country>, </conf-loc>},
