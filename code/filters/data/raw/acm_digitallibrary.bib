series = {NordiCHI '12}
}

@inproceedings{10.1145/3213586.3225227,
author = {Sch\"{a}fer, Hanna and Bachner, Joachim and Pretscher, Sebastian and Groh, Georg and Demetriou, Yolanda},
title = {Study on Motivating Physical Activity in Children with Personalized Gamified Feedback},
year = {2018},
