@inproceedings{10.1145/3500931.3500942,
author = {Li, Xiaohua and Zhang, Yan and Tian, Yutong and Cheng, Qingyun and Gao, Yue and Gao, Mengke},
title = {Research Progress on the Intelligent Health Management of the Cognitive Frailty of the Elderly},
year = {2021},
isbn = {9781450395588},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
