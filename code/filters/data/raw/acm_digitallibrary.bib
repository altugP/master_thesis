@inproceedings{10.1145/3421937.3422016,
author = {Pater, Jessica A. and Coupe, Amanda and Miller, Andrew D. and Reining, Lauren E. and Drouin, Michelle and Toscos, Tammy},
title = {Design Opportunities and Challenges for App-Based Telemental Health Technologies for Teens and Young Adults},
