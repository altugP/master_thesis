series = {CHI '20}
}

@inproceedings{10.1145/3278576.3278577,
author = {Zhang, Shibo and Nguyen, Dzung Tri and Zhang, Gan and Xu, Runsheng and Maglaveras, Nikolaos and Alshurafa, Nabil},
