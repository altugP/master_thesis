author = {Uyumaz, Begum Erten and Uyumaz, Umut and Rama, Mili Docampo and Overeem, Sebastiaan and Hu, Jun and Feijs, Loe},
title = {The Thought Journal App: Designed to confront thoughts that influence sleep},
year = {2021},
