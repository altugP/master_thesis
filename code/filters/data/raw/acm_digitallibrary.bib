}

@article{10.1145/3546743,
author = {Chaudhry, Beenish Moalla and Dasgupta, Dipanwita and Chawla, Nitesh},
title = {Formative Evaluation of a Tablet Application to Support Goal-Oriented Care in Community-Dwelling Older Adults},
