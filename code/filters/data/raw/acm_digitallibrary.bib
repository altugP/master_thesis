pages = {1842–1860},
numpages = {19},
keywords = {Cohabiting Couples, Design research, Sexual Desire, Sketching},
location = {<conf-loc>, <city>Pittsburgh</city>, <state>PA</state>, <country>USA</country>, </conf-loc>},
series = {DIS '23}
