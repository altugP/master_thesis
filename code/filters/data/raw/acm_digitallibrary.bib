pages = {1045–1054},
numpages = {10},
keywords = {tangible interfaces, mixed-reality games, learning technologies, educational games},
location = {Seoul, Republic of Korea},
series = {CHI '15}
}

@article{10.1145/3301421,
author = {Lederman, Reeva and Gleeson, John and Wadley, Greg and D’alfonso, Simon and Rice, Simon and Santesteban-Echarri, Olga and Alvarez-Jimenez, Mario},
title = {Support for Carers of Young People with Mental Illness: Design and Trial of a Technology-Mediated Therapy},
