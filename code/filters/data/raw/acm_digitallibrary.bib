@inproceedings{10.1145/3267851.3267909,
author = {Trinh, Ha and Shamekhi, Ameneh and Kimani, Everlyne and Bickmore, Timothy W.},
title = {Predicting User Engagement in Longitudinal Interventions with Virtual Agents},
