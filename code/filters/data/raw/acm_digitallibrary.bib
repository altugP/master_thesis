abstract = {When navigating through the day, people engage in a range of activities that each require context-specific tuning of mental and physical states for optimum performance. Typically an individual is exposed to both favorable and unfavorable environmental conditions to achieve their objectives. In this paper we define a framework that characterizes individual psycho-physiological states and provides some insights towards efficiently navigating these states using embedded actuators. We propose that by monitoring an individuals environment and digital biomarkers we can support the appropriate maintenance of, and transition between psycho-physical states that would allow us to support an individual's overall health and comfort in a holistic manner. Here we provide an application case study to illustrate our framework.},
booktitle = {Proceedings of the 2021 Workshop on Future of Digital Biomarkers},
pages = {51–54},
numpages = {4},
keywords = {digital biomarkers, psycho-physiological states, wearable sensors},
