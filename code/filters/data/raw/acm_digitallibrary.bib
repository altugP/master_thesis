@article{10.1145/3231938,
author = {Zhao, Huan and Zheng, Zhaobo and Swanson, Amy and Weitlauf, Amy and Warren, Zachary and Sarkar, Nilanjan},
title = {Design of a Haptic-Gripper Virtual Reality System (Hg) for Analyzing Fine Motor Behaviors in Children with Autism},
