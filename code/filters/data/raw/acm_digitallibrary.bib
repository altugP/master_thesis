series = {NordiCHI '22}
}

@inproceedings{10.1145/3386527.3405917,
author = {Wang, Qiaosi and Jing, Shan and Joyner, David and Wilcox, Lauren and Li, Hong and Pl\"{o}tz, Thomas and Disalvo, Betsy},
